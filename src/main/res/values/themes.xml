<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.SOVORODevelop" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="colorOnSurface">@color/black</item>
        <item name="android:colorControlHighlight">@color/colorPrimary</item>
        <!--        &lt;!&ndash; Status bar color. &ndash;&gt;-->
        <!--        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>-->
        <!-- Customize your theme here. -->
        <item name="android:windowActionBar">false</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowContentTransitions">true</item>
        <item name="android:windowActivityTransitions">true</item>
    </style>

    <!-- Splash Activity theme. -->
    <style name="FullscreenTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="android:windowFullscreen">true</item>
        <!--        <item name="android:windowDisablePreview">true</item>-->
        <item name="android:colorBackgroundCacheHint">@null</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowAnimationStyle">@android:style/Animation</item>
    </style>

    <!-- Material Dialog theme. -->
    <style name="AlertDialogTheme" parent="ThemeOverlay.MaterialComponents.Dialog.Alert">
        <item name="android:windowMinWidthMajor">30%</item>
        <item name="android:windowMinWidthMinor">30%</item>
        <item name="buttonBarPositiveButtonStyle">@style/AlertButtonStyle</item>
        <item name="buttonBarNegativeButtonStyle">@style/AlertButtonStyle</item>
        <item name="materialAlertDialogBodyTextStyle">@style/AlertDialogBodyTextStyle</item>
        <item name="materialAlertDialogTitleTextStyle">@style/AlertDialogTitleTextStyle</item>
    </style>

    <!-- Material Dialog theme. -->
    <style name="AlertDialogDarkTheme" parent="ThemeOverlay.MaterialComponents.Dialog.Alert">
        <item name="colorSurface">#27272a</item>
        <item name="android:windowMinWidthMajor">40%</item>
        <item name="android:windowMinWidthMinor">40%</item>
        <item name="buttonBarPositiveButtonStyle">@style/AlertButtonStyle</item>
        <item name="buttonBarNegativeButtonStyle">@style/AlertButtonStyle</item>
        <item name="materialAlertDialogBodyTextStyle">@style/AlertDialogBodyTextStyleForDarkTheme
        </item>
        <item name="materialAlertDialogTitleTextStyle">
            @style/AlertDialogTitleTextStyleForDarkTheme
        </item>
    </style>

    <style name="AlertDialogTitleTextStyleForDarkTheme">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textAppearance">?attr/textAppearanceBody1</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="AlertDialogBodyTextStyleForDarkTheme" parent="TextAppearance.MaterialComponents.Body2">
        <item name="android:textAppearance">?attr/textAppearanceBody2</item>
        <item name="android:textColor">#b3ffffff</item>
        <item name="android:textSize">16sp</item>
        <item name="android:letterSpacing">0.04</item>
    </style>

    <style name="AlertDialogTitleTextStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textAppearance">?attr/textAppearanceBody1</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/dialog_title</item>
    </style>

    <style name="AlertDialogBodyTextStyle" parent="TextAppearance.MaterialComponents.Body2">
        <item name="android:textAppearance">?attr/textAppearanceBody2</item>
        <item name="android:textColor">@color/dialog_text</item>
        <item name="android:textSize">16sp</item>
        <item name="android:letterSpacing">0.04</item>
    </style>

    <style name="AlertButtonStyle" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="android:textColor">@color/dialog_button_text</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textAllCaps">false</item>
        <item name="rippleColor">@color/dialog_button_pressed</item>
    </style>

    <style name="CompleteButtonStyle" parent="Widget.MaterialComponents.Button">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">16sp</item>
        <item name="android:backgroundTint">@color/btn_register_disable_color</item>
        <item name="android:fontFamily">@font/noto_medium</item>
    </style>

    <style name="OutlinedRoundedBox" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="shapeAppearanceOverlay">
            @style/ShapeAppearanceOverlay.MyApp.TextInputLayout.Rounded
        </item>
        <item name="errorTextAppearance">@style/ErrorText</item>
    </style>

    <style name="ShapeAppearanceOverlay.MyApp.TextInputLayout.Rounded" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">32dp</item>
    </style>

    <style name="ErrorText" parent="@android:style/TextAppearance">
        <item name="android:textColor">@color/license_error_text_color</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="CardViewButtonStyle" parent="Widget.MaterialComponents.CardView">
        <item name="android:layout_gravity">center</item>
        <item name="cardCornerRadius">8dp</item>
        <item name="cardElevation">2dp</item>
        <item name="useCompatPadding">true</item>
        <item name="android:clickable">true</item>
    </style>

    <style name="ArrowCardViewButtonStyle" parent="Widget.MaterialComponents.CardView">
        <item name="android:layout_gravity">center</item>
        <item name="cardCornerRadius">8dp</item>
        <item name="cardElevation">2dp</item>
        <item name="useCompatPadding">true</item>
        <item name="android:clickable">true</item>
<!--        <item name="cardBackgroundColor">@color/btn_arrow_background</item>-->
    </style>

    <style name="RightMenuTextViewStyle" parent="Widget.MaterialComponents.TextView">
        <item name="android:fontFamily">@font/noto_regular</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="MaterialAlertDialog" parent="@style/ThemeOverlay.MaterialComponents.MaterialAlertDialog">
        <item name="android:windowMinWidthMajor">25%</item>
        <item name="android:windowMinWidthMinor">25%</item>
        <item name="shapeAppearanceOverlay">@style/ShapeAppearanceOverlay.MyApp.Dialog.Rounded
        </item>
        <item name="materialAlertDialogBodyTextStyle">@style/MaterialAlertDialogBodyTextStyle</item>
    </style>

    <style name="ShapeAppearanceOverlay.MyApp.Dialog.Rounded" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">10dp</item>
    </style>

    <style name="MaterialAlertDialogBodyTextStyle" parent="TextAppearance.MaterialComponents.Body2">
        <item name="android:textAppearance">?attr/textAppearanceBody2</item>
        <item name="android:fontFamily">@font/noto_regular</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textAlignment">center</item>
        <item name="android:paddingVertical">10dp</item>
        <item name="android:paddingHorizontal">-10dp</item>
    </style>

    <style name="SttTextFinalAreaStyle" parent="Widget.MaterialComponents.TextView">
        <item name="android:fontFamily">@font/regular</item>
        <item name="android:textSize">33sp</item>
        <item name="android:textColor">@color/final_color</item>
    </style>
</resources>